<div class="page-header">
  <h1><%= number_with_delimiter(@comment_count) %> <small>comments</small>
  </h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Date</th>
      <th>Language</th>
      <th>Video</th>
    </tr>
  </thead>
  <tbody>
    <% page_num = @page.to_i %>
    <% per_page_num = @per_page.to_i %>
    <% @comments.each_with_index do |comment, index| %>
        <tr>
            <td><%= index + 1 + (page_num - 1) * per_page_num %></td>
            <td><a href="http://amara.org/en/profiles/profile/<%= comment['user'] %>/"><%= comment['user'] %></a></td>
            <td><%= comment['created'].to_time.strftime('%b %-d, %Y %H:%M %P %Z') %></td>
            <td><%= comment['language'] %></td>
            <td><a href="http://amara.org<%= comment['language_url'] %>?tab=comments"><%= comment['video'] %></a></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @comments %>