<div class="page-header">
  <h1><%= number_with_delimiter(@member_joined_count) %> <small>volunteers joined</small>
  </h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Date</th>
      <th>Languages</th>
    </tr>
  </thead>
  <tbody>
    <% page_num = @page.to_i %>
    <% per_page_num = @per_page.to_i %>
    <% @user_data.each_with_index do |user, index| %>
        <tr>
            <td><%= index + 1 + (page_num - 1) * per_page_num %></td>
            <td><a href="http://amara.org/en/profiles/profile/<%= user['user'] %>/"><%= user['user'] %></a></td>
            <td><%= user['created'].to_time.strftime('%b %-d, %Y %H:%M %P %Z') %></td>
            <td><%= user['languages'].join(', ') %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @user_data %>
